#include <stdio.h>
#include<ctype.h>
#include<stdlib.h>
void addMatrix(int,int,int*,int*);
void subMatrix(int,int,int*,int*);
void mulMatrix(int,int,int*,int*);
int main()
{
    int m,n,i,j;
    printf("\n Enter rows and columns\n");
    scanf("%d %d",&m,&n);
    int a[m][n],b[m][n];
     for(i=0;i<m;i++)
    for(j=0;j<n;j++)
    scanf("%d",&a[i][j]);
     for(i=0;i<m;i++)
    for(j=0;j<n;j++)
    scanf("%d",&b[i][j]);
    printf("\n Sum of Matrices\n");
    addMatrix(m,n,a,b);
    printf("\n Difference of Matrices\n");
    subMatrix(m,n,a,b);
    printf("\n Product of Matrices\n");
    mulMatrix(m,n,a,b);
    return 0;
}
void addMatrix(int m,int n,int *a1,int *b1)
{
    int c[m][n],i,j;
    for(i=0;i<m;i++)
    for(j=0;j<n;j++)
    c[i][j]=*(a1+i+j)+*(b1+i+j);
    for(i=0;i<m;i++)
    {
    for(j=0;j<n;j++)
    {
        printf("\t%d",c[i][j]);
    }
    printf("\n");
    }
}
    void subMatrix(int m,int n,int *a1,int *b1)
{
    int c[m][n],i,j;
    for(i=0;i<m;i++)
    for(j=0;j<n;j++)
    c[i][j]=*(a1+i+j)-*(b1+i+j);
    for(i=0;i<m;i++)
    {
    for(j=0;j<n;j++)
    {
        printf("\t%d",c[i][j]);
    }
    printf("\n");
    }
    
}
 void mulMatrix(int m,int n,int *a1,int *b1)
{
    int c[5][5]={0},i,j;
    for(i=0;i<m;i++)
    {
    for(j=0;j<n;j++)
    {
        
        for(int k=0;j<n;j++)
        {
            c[i][j]+=*(a1+i+k)*(*b1+k+j);
        }
    }
    }
    
    for(i=0;i<m;i++)
    {
    for(j=0;j<n;j++)
    {
        printf("\t%d",c[i][j]);
    }
    printf("\n");
    }
    
}
