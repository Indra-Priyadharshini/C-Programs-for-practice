#include<stdio.h>
int isArmstrong(int); //declaration
int isPerfect(int);
int main()
{
int n;
scanf("%d",&n);
if(isArmstrong(n))
    printf ("%d is an Armstrong number",n);
else
printf ("%d is not an Armstrong number",n);
if(isPerfect(n))
    printf ("%d is a Perfect number",n);
else
printf ("%d is not a Perfect number",n);
 return 0;
}
int isArmstrong(int m)
{
    int r,sum,num;
    sum=0;
    num=m;
    while(m!=0)
    {
        r=m%10;
        sum+=r*r*r;
        m=m/10;
    }
    return (num==sum);
}
int isPerfect(int m)
{
    int sum,num;
    sum=0;
    num=m;
    for(int i=1;i<m;i++)
    {
        if(m%i==0)
        sum+=i;
    }
    return(num==sum);
}
