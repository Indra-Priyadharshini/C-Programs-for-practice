#include<stdio.h>
int main()
{
    int i;
    int n1,n2;
    int n1sum = 0;
    int n2sum = 0;
    printf("Enter two numbers to check if Amicable or not : ");
    scanf("%d %d",&n1,&n2);
    for(int i=1;i<n1;i++)
    {

        if(n1 % i == 0)
        {
            n1sum+=i;
        }
    }
    for(int i=1;i<n2;i++){
        if(n2 % i == 0){
           n2sum+=1;
        }
    }
    printf("\nn1sum=%d n2sum=%d",n1sum,n2sum);
    if((n1==n2sum)||(n2==n1sum))
    {
        printf("%d and %d are Amicable numbers\n",n1,n2);
    }
    else
    {
        printf("%d and %d are not Amicable numbers\n",n1,n2);
    }
}
