#include <stdio.h>
float calcAmount(int,float*,int*);
float calcDiscount(float);
void printDetails(int,float*,int*,float,float);
int main(void) {
	// your code goes here
	int n;
	scanf("%d",&n);
	float prices[n];
	int units[n];
	int i;
	for(i=0;i<n;i++)
	{
	scanf("%f",&prices[i]);
	scanf("%d",&units[i]);
	}
	float Total=calcAmount(n,prices,units);
	float dis=calcDiscount(Total);
	printDetails(n,prices,units,Total,dis);
	return 0;
}
float calcAmount(int n, float *p,int *u)
{
    float amount=0;
    for(int i=0;i<n;i++)
	{
	    amount+=(p[i]*u[i]);
	}
	return amount;
}
float calcDiscount(float T)
{
    if(T<=1000)
    return T*0.05;
    else if(T>1000&&T<=5000)
    return T*0.10;
    else
    return T*0.15;
}
void printDetails(int n, float *p, int *u, float T,float D )
{
    int i;
    for(i=0;i<n;i++)
	{
	printf("\nProduct %d Price: %f",i+1,p[i]);
	printf("\nProduct %d Units: %d",i+1,u[i]);
	}
	printf("\n Total Amount=%f",T);
	printf("\n Discount=%f",D);
	printf("\n Net Amount to be paid=%f",T-D);
}
