#include <stdio.h>
#include <ctype.h>
#include <string.h>

int main ()
{
char s[100];
fgets (s, 100, stdin);
int i = 0;
char s1[10] = "aeiouAEIOU";
while (i != strlen (s) - 1)
{
int x = 0, y = 0;
for (int j = 0; j < 10; j++)
{
if (s[i] == s1[j])
{
x = 1;
}
if (s[i + 1] == s1[j])
{
y = 1;
}
}
int z = s[i + 1];
if ((x == 1) && (y == 0))
{
    s[i+1]=toupper(s[i+1]);
/*if (z >= 65 && z <= 90)
{
//s[i + 1] = 32 + z;
s[i+1]=tolower(s[i+1]);
}
if (z >= 97 && z <= 122)
{
s[i + 1] = z - 32;
}*/
}

i++;
}
printf ("%s", s);
return 0;
}
