include<stdio.h>
#include<string.h>
void calcsum(int*);
int main()
{
    int a[10];
    int *p,i;
    p=a;
    for(i=0;i<10;i++)
    scanf("%d",&a[i]);
    for(i=0;i<10;i++)
    printf("%d\t",*(p+i));
    calcsum(a);
    return 0;
}
void calcsum(int *p1)
{
    int sum=0;
    for(int i=0;i<10;i++)
    sum=sum+*(p1+i);
    printf("\nsum=%d",sum);
    
}
